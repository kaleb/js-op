{
    "defaultSeverity": "error",
    "extends": [
        "tslint:all",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "jsdoc-format": [true, "check-multiline-start"],
        "jsdoc-require": [true],
        "no-redundant-jsdoc": [true],
        "completed-docs": [true],
        "valid-js-doc": [false, {
            "requireParamType": false,
            "requireReturn": false,
            "requireReturnType": false,
            "requireReturnDescription": false,
            "prefer": {
                "arg": "param",
                "argument": "param",
                "returns": "return"
            }
        }],
        "no-default-export": false,
        "only-arrow-functions": [true, "allow-named-functions"],
        "typedef": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-preblock",
            "check-rest-spread"
        ],
        "align": [
            true,
            "parameters",
            "statements",
            "elements",
            "members"
        ],
        "newline-before-return": false
    },
    "rulesDirectory": []
}
